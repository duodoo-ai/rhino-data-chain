<?xml version="1.0" encoding="utf-8"?>
<odoo>
	<record id="view_purchase_change_download_form" model="ir.ui.view">
         <field name="name">purchase.change.download.form</field>
         <field name="model">purchase.change.download</field>
         <field name="arch" type="xml">
             <form string="采购变更下载">
               	<group>
                   <group>
                   		<field name="type"/>
                   </group>
                   <group>  
                   		<field name="order_ids" widget="many2many_tags" readonly="1" force_save="1"/>
                   </group>
                 </group>
             	<footer>
                    <button string="下载" name="action_download" type="object" class="btn-primary"/>
                    <button string="取消" class="oe_link" special="cancel"/>
                </footer>
             </form>
         </field>
     </record>
     <record id="action_purchase_change_download" model="ir.actions.act_window">
           <field name="name">采购变更下载</field>
           <field name="type">ir.actions.act_window</field>
           <field name="res_model">purchase.change.download</field>
           <field name="view_mode">form</field>
           <field name="target">new</field>
      </record>
       
     <act_window name="采购变更下载"
      res_model="purchase.change.download"
      binding_model="purchase.change"
      view_mode="form"
      target="new"
      context="{'default_order_ids':active_ids}"
      id="purchase_change_download_wizard"
      />
</odoo>
